{
  "manifest_version": 3,
  "name": "Answer Sync",
  "version": "1.0",
  "description": "Auto detect questions on a webpage and answer them using advanced AI.",
  "icons": {
    "16": "images/icon128.png",
    "48": "images/icon128.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}